
@{
    ViewBag.Title = "Validar";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Validar</title>
</head>
<body>
    <div> 
        <h2>Ingreso al sistema Tecsup</h2>

        @using (Html.BeginForm())
        {
        <table align="center">
            <tr>
                <td>Ingrese usuario</td>
                <td>@Html.TextBox("user")</td>
            </tr> 
            <tr>
                <td>Ingrese clave</td>
                <td>@Html.TextBox("password", null, new { @class = "textBoxStandard", type = "password" })</td>
            </tr> 
            <tr>
                <td><input type="submit"  value="Ingresar" onclick="Validar()" /></td>
            </tr>


        </table>
        }
    </div>
</body>
</html>
